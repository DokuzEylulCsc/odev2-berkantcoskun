#include <stdio.h>
#include <conio.h>
main()
{
int sayi;
printf("10luk sayiyi giriniz");
scanf("%d",&sayi);
while (sayi!=0)
{
	while(sayi>999)
	{
	printf("M");
	sayi=sayi-1000;
}
if(sayi>=900)
{
	sayi=sayi-900;
	printf("CM");
}
if(sayi>=500)
{
	sayi=sayi-500;
	printf("D");
	
}
if(sayi>=400)
{
	sayi=sayi-400;
	printf("CD");
}
while(sayi>99)
{
sayi=sayi-100;
	printf("C");
}
if(sayi>=90)
{
	sayi=sayi-90;
	printf("XC");
}
while(sayi>49)
{
	sayi=sayi-50;
	printf("L");
}
if(sayi>39)
{
	sayi=sayi-40;
	printf("XL");
}
while(sayi>9)
{
	sayi=sayi-10;
	printf("X");
}
if(sayi==9)
{
	sayi=sayi-9;
	printf("IX");
}
while(sayi>4)
{
    sayi=sayi-5;
	printf("V");
	break;	
}
if(sayi==4)
{
	sayi=sayi-4;
	printf("IV");
}
while(sayi>=1)
{
	sayi=sayi-1;
	printf("I");
}
}
}
